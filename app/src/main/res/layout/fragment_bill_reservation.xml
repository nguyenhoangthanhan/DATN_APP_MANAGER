<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.andeptrai.datn_restaurant_app_manager.Activity.ui.bill.reservation.BillReservationFragment">

    <RelativeLayout
        android:id="@+id/viewAddNewReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange001"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/txtAddNewBillReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_add_new_food"
            android:padding="@dimen/_5sdp"
            android:text="@string/add_new_bill_reservation"
            android:textColor="@color/white" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBillReservation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>